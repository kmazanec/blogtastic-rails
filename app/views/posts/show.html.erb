<h2>
  <%= @post.title %>
 </h2>

<div class="blog-text">
  <%= @post.content %>
</div>

<div class="comments_container">
  <h3>Comments</h3>
  <%= render @post.comments %>
</div>

<div class="after_comments">
  <h4>Add Comment:</h4>
  <%= render "comments/form" %>


<%= link_to "Back", posts_path(@post) %>

<%= link_to "Edit", edit_post_path(@post) %>

</div>